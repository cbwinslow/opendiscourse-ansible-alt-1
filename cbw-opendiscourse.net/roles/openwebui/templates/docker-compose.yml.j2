version: '3.9'
services:
  openwebui:
    image: {{ openwebui_image }}
    environment:
      - OLLAMA_API_BASE=http://ollama:11434 # placeholder if you add Ollama later
    volumes:
      - "{{ app_data_root }}/openwebui/data:/app/backend/data"
    networks:
      - {{ shared_network }}
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.openwebui.rule=Host(`{{ services.openwebui }}`)"
      - "traefik.http.routers.openwebui.entrypoints=websecure"
      - "traefik.http.services.openwebui.loadbalancer.server.port=8080"
networks:
  {{ shared_network }}:
    external: true
