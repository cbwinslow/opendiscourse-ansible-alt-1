# Database Configuration
POSTGRES_DB={{ opendiscourse_db_name }}
POSTGRES_USER={{ opendiscourse_db_user }}
POSTGRES_PASSWORD={{ opendiscourse_db_password }}

# Application Configuration
APP_PORT={{ opendiscourse_app_port | default(3000) }}
NODE_ENV={{ opendiscourse_node_env | default('production') }}
API_SECRET={{ opendiscourse_api_secret }}

# Redis Configuration
REDIS_HOST={{ opendiscourse_redis_host | default('redis') }}
REDIS_PORT={{ opendiscourse_redis_port | default(6379) }}

# Email Configuration (if needed)
SMTP_HOST={{ opendiscourse_smtp_host | default('') }}
SMTP_PORT={{ opendiscourse_smtp_port | default(587) }}
SMTP_USER={{ opendiscourse_smtp_user | default('') }}
SMTP_PASS={{ opendiscourse_smtp_password | default('') }}

# Optional Features
ENABLE_SSO={{ opendiscourse_enable_sso | default(false) }}
DEBUG_MODE={{ opendiscourse_debug_mode | default(false) }}
