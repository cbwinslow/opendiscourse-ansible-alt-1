---
service:
  name: agentic-rag
  host: {{ agentic_rag_host }}
  port: {{ agentic_rag_port }}
  log_level: INFO
  max_concurrent_requests: {{ max_concurrent_requests }}

vector_store:
  type: {{ vector_store_type }}
  url: {{ vector_store_url }}
  api_key: {{ vector_store_api_key }}
  chunk_size: {{ chunk_size }}

llm:
  provider: {{ llm_provider }}
  api_url: {{ llm_api_url }}
  api_key: {{ llm_api_key }}
  model: {{ llm_model }}
  max_tokens: 2048
  temperature: 0.7

cache:
  enabled: {{ cache_enabled }}
  ttl: {{ cache_ttl }}
  backend: redis
  url: redis://localhost:6379/0

langfuse:
  enabled: {{ langfuse_enabled }}
  host: {{ langfuse_host }}
  port: {{ langfuse_port }}
  public_key: {{ langfuse_public_key }}
  private_key: {{ langfuse_private_key }}
  trace_retrievals: true
  trace_generations: true

monitoring:
  metrics_enabled: {{ metrics_enabled }}
  prometheus_port: {{ prometheus_port }}
  health_check_interval: 30
