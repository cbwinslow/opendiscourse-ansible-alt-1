# Database Configuration
POSTGRES_USER={{ langfuse_postgres_user }}
POSTGRES_PASSWORD={{ langfuse_postgres_password }}
POSTGRES_DB={{ langfuse_postgres_db }}

# Redis Configuration
REDIS_PASSWORD={{ langfuse_redis_password }}

# Application Settings
NODE_ENV=production
NEXTAUTH_SECRET={{ langfuse_nextauth_secret }}
NEXTAUTH_URL={{ langfuse_nextauth_url }}
SALT={{ langfuse_salt }}
JWT_SECRET={{ langfuse_jwt_secret }}
JWT_SIGNING_PUBLIC_KEY={{ langfuse_jwt_signing_public_key }}

# S3 Storage Configuration
S3_ACCESS_KEY_ID={{ langfuse_s3_access_key_id }}
S3_SECRET_ACCESS_KEY={{ langfuse_s3_secret_access_key }}
S3_REGION={{ langfuse_s3_region }}
S3_BUCKET_NAME={{ langfuse_s3_bucket_name }}
S3_ENDPOINT={{ langfuse_s3_endpoint }}
S3_FORCE_PATH_STYLE={{ langfuse_s3_force_path_style | default('false') }}

# Tracing Configuration
TRACING_ENABLED={{ langfuse_tracing_enabled | default('false') }}
TRACING_SAMPLING_RATE={{ langfuse_tracing_sampling_rate | default('0.1') }}
TRACING_JAEGER_AGENT_HOST={{ langfuse_tracing_jaeger_agent_host | default('jaeger') }}
TRACING_JAEGER_AGENT_PORT={{ langfuse_tracing_jaeger_agent_port | default('6831') }}

# Network Configuration
LANGCHAIN_ENDPOINT={{ langfuse_langchain_endpoint | default('http://localhost:8000') }}

# Security
CORS_ORIGINS={{ langfuse_cors_origins | default('*') }}
RATE_LIMIT_WINDOW_MS={{ langfuse_rate_limit_window_ms | default('60000') }}
RATE_LIMIT_MAX_REQUESTS={{ langfuse_rate_limit_max_requests | default('100') }}

# Monitoring
METRICS_ENABLED={{ langfuse_metrics_enabled | default('true') }}
PROMETHEUS_METRICS_ENABLED={{ langfuse_prometheus_metrics_enabled | default('true') }}
PROMETHEUS_METRICS_PORT={{ langfuse_prometheus_metrics_port | default('9090') }}

# Logging
LOG_LEVEL={{ langfuse_log_level | default('info') }}
LOG_FORMAT={{ langfuse_log_format | default('json') }}

# Feature Flags
FEATURE_FLAG_EXPERIMENTAL={{ langfuse_feature_flag_experimental | default('false') }}
FEATURE_FLAG_ANALYTICS={{ langfuse_feature_flag_analytics | default('true') }}

# External Integrations
OPENAI_API_KEY={{ langfuse_openai_api_key | default('') }}
ANTHROPIC_API_KEY={{ langfuse_anthropic_api_key | default('') }}
COHERE_API_KEY={{ langfuse_cohere_api_key | default('') }}

# Advanced Configuration
DATABASE_POOL_SIZE={{ langfuse_database_pool_size | default('10') }}
WORKER_CONCURRENCY={{ langfuse_worker_concurrency | default('2') }}
JOB_QUEUE_REDIS_DB={{ langfuse_job_queue_redis_db | default('0') }}
