{
  "@id": "health-check",
  "match": [
    {
      "host": ["{{ caddy_monitoring.health_host | default('localhost') }}"],
      "path": ["{{ caddy_monitoring.health_path | default('/health') }}"]
    }
  ],
  "handle": [
    {
      "handler": "static_response",
      "body": "OK",
      "status_code": 200,
      "headers": {
        "Content-Type": ["text/plain; charset=utf-8"]
      }
    }
  ],
  "terminal": true
}
