{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "name": "Annotations & Alerts"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "id": 1,
  "panels": [
    {
      "datasource": "${DS_PROMETHEUS}",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "axisCenteredZero": false,
            "axisColorMode": "text",
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineWidth": 1
          }
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "id": 2,
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "sum(rate(process_cpu_seconds_total{job=\"opensearch\"}[5m])) by (instance) * 100",
          "legendFormat": "{{instance}} - CPU Usage"
        }
      ],
      "title": "OpenSearch CPU Usage",
      "type": "timeseries"
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "id": 4,
      "targets": [
        {
          "expr": "process_resident_memory_bytes{job=\"opensearch\"}",
          "legendFormat": "{{instance}} - Memory Usage"
        }
      ],
      "title": "OpenSearch Memory Usage",
      "type": "timeseries"
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      },
      "id": 6,
      "targets": [
        {
          "expr": "rate(http_requests_total{job=~\"opensearch.*\"}[5m])",
          "legendFormat": "{{instance}} - {{method}} {{handler}}"
        }
      ],
      "title": "OpenSearch HTTP Requests",
      "type": "timeseries"
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      },
      "id": 8,
      "targets": [
        {
          "expr": "opensearch_indices_docs_count",
          "legendFormat": "{{index}} - Documents"
        }
      ],
      "title": "Document Count",
      "type": "timeseries"
    }
  ],
  "refresh": "5s",
  "schemaVersion": 36,
  "style": "dark",
  "tags": ["opensearch", "monitoring"],
  "templating": {
    "list": []
  },
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"],
    "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
  },
  "timezone": "browser",
  "title": "OpenSearch Overview",
  "version": 1,
  "weekStart": ""
}
