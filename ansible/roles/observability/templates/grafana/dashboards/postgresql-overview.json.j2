{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "name": "Annotations & Alerts"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "id": 3,
  "panels": [
    {
      "datasource": "${DS_PROMETHEUS}",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "axisCenteredZero": false,
            "axisColorMode": "text",
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineWidth": 1
          }
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "id": 30,
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "sum(rate(pg_stat_activity_count{datname=~\"$database\"}[5m])) by (datname, state)",
          "legendFormat": "{{datname}} - {{state}}"
        }
      ],
      "title": "PostgreSQL Connections",
      "type": "timeseries"
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "id": 32,
      "targets": [
        {
          "expr": "pg_stat_database_xact_commit{datname=~\"$database\"}",
          "legendFormat": "{{datname}} - Commits"
        },
        {
          "expr": "pg_stat_database_xact_rollback{datname=~\"$database\"}",
          "legendFormat": "{{datname}} - Rollbacks"
        }
      ],
      "title": "PostgreSQL Transactions",
      "type": "timeseries"
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      },
      "id": 34,
      "targets": [
        {
          "expr": "rate(pg_stat_database_tup_returned{datname=~\"$database\"}[5m])",
          "legendFormat": "{{datname}} - Returned"
        },
        {
          "expr": "rate(pg_stat_database_tup_fetched{datname=~\"$database\"}[5m])",
          "legendFormat": "{{datname}} - Fetched"
        }
      ],
      "title": "PostgreSQL Tuple Operations",
      "type": "timeseries"
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      },
      "id": 36,
      "targets": [
        {
          "expr": "pg_database_size_bytes{datname=~\"$database\"}",
          "legendFormat": "{{datname}}"
        }
      ],
      "title": "Database Size",
      "type": "timeseries"
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 16
      },
      "id": 38,
      "targets": [
        {
          "expr": "rate(pg_stat_user_tables_seq_scan{datname=~\"$database\"}[5m])",
          "legendFormat": "{{schemaname}}.{{relname}} - Seq Scans"
        },
        {
          "expr": "rate(pg_stat_user_tables_idx_scan{datname=~\"$database\"}[5m])",
          "legendFormat": "{{schemaname}}.{{relname}} - Index Scans"
        }
      ],
      "title": "Table Scans",
      "type": "timeseries"
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 24
      },
      "id": 40,
      "targets": [
        {
          "expr": "pg_stat_activity_count{datname=~\"$database\", state!~\"idle|idle in transaction\"}",
          "legendFormat": "{{application_name}} - Active Connections"
        }
      ],
      "title": "Active Queries",
      "type": "table"
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 32
      },
      "id": 42,
      "targets": [
        {
          "expr": "rate(pg_stat_database_tup_inserted{datname=~\"$database\"}[5m])",
          "legendFormat": "{{datname}} - Inserts"
        },
        {
          "expr": "rate(pg_stat_database_tup_updated{datname=~\"$database\"}[5m])",
          "legendFormat": "{{datname}} - Updates"
        },
        {
          "expr": "rate(pg_stat_database_tup_deleted{datname=~\"$database\"}[5m])",
          "legendFormat": "{{datname}} - Deletes"
        }
      ],
      "title": "Write Operations",
      "type": "timeseries"
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 40
      },
      "id": 44,
      "targets": [
        {
          "expr": "pg_stat_activity_count{datname=~\"$database\", state!~\"idle|idle in transaction\"}",
          "legendFormat": "{{application_name}} - Active Queries"
        }
      ],
      "title": "Active Queries by Application",
      "type": "timeseries"
    }
  ],
  "refresh": "5s",
  "schemaVersion": 36,
  "style": "dark",
  "tags": ["postgresql", "database", "monitoring"],
  "templating": {
    "list": [
      {
        "current": {
          "selected": false,
          "text": "All",
          "value": ".*"
        },
        "hide": 0,
        "includeAll": true,
        "label": "Database",
        "multi": true,
        "name": "database",
        "options": [],
        "query": "label_values(pg_database_info, datname)",
        "refresh": 1,
        "regex": ".*",
        "skipUrlSync": false,
        "type": "query"
      }
    ]
  },
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"],
    "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
  },
  "timezone": "browser",
  "title": "PostgreSQL Overview",
  "version": 1,
  "weekStart": ""
}
